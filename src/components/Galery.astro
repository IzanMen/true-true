<script>
document.addEventListener("DOMContentLoaded", function () {
    if (window.innerWidth > 700) {
        const galleryWrapper = document.querySelector(".galery-wrapper") as HTMLElement;
        let scrollAmount = 0;
        const speed = 0.5; // Ajusta la velocidad del desplazamiento

        function autoScroll(): void {
            scrollAmount += speed;
            if (scrollAmount >= galleryWrapper.scrollWidth / 2) {
                scrollAmount = 0;
            }
            galleryWrapper.style.transform = `translateX(-${scrollAmount}px)`;
            requestAnimationFrame(autoScroll);
        }

        autoScroll();
    }
});
</script>

